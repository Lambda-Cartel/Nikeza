<Page x:Class="Desktop.App.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Nikeza - Registration">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBox     Grid.Row="0" x:Name="Email" Text="{Binding Email}" Width="200" Margin="10" TextAlignment="Center" />
        <PasswordBox Grid.Row="1" x:Name="Password" Width="200"  Margin="10" />
        <PasswordBox Grid.Row="2" x:Name="Confirm"  Width="200"  Margin="10" />
        <Button      Grid.Row="3" Content="Join" Command="{Binding Submit}" IsEnabled="{Binding IsValidated, UpdateSourceTrigger=PropertyChanged}"  Height="20" Width="60" Background="#FF21BAF3"   />

    </Grid>
</Page>
