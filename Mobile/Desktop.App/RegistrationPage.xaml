<Page x:Class="Desktop.App.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.App"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Text="{Binding Email}" />
        <PasswordBox Grid.Row="1" x:Name="Password" />
        <PasswordBox Grid.Row="2" x:Name="Confirm" />
        <Button Grid.Row="3" Content="Submit" Command="{Binding Submit}" IsEnabled="{Binding IsValidated, UpdateSourceTrigger=PropertyChanged}"  Height="30" Width="60"  />

    </Grid>
</Page>
